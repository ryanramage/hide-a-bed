{
  "name": "hide-a-bed",
  "version": "4.1.2",
  "description": "An abstraction over couchdb calls that includes easy mock/stubs with pouchdb",
  "module": "index.mjs",
  "main": "cjs/index.cjs",
  "type": "module",
  "exports": {
    "require": "./cjs/index.cjs",
    "import": "./index.mjs",
    "default": "./cjs/index.cjs"
  },
  "scripts": {
    "clean": "(find . -name \"*.mts\" -type f -delete || true) && (find . -name \"*.map\" -type f -delete || true) && (find . -name \"log.txt\" -type f -delete || true)",
    "build": "npm run clean && tsc && npx -p dualmode@latest build",
    "build:cjs": "rm -rf cjs && node build/build.mjs",
    "test": "node tests/test.mjs",
    "lint:fix": "standard --fix",
    "prepublish": "npm run build",
    "full": "npm run lint:fix && npm run build && npm run clean"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ryanramage/hide-a-bed.git"
  },
  "keywords": [
    "couchdb",
    "test"
  ],
  "author": "ryan ramage",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ryanramage/hide-a-bed/issues"
  },
  "homepage": "https://github.com/ryanramage/hide-a-bed#readme",
  "dependencies": {
    "JSONStream": "^1.3.5",
    "lodash": "^4.17.21",
    "needle": "^3.2.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/lodash": "^4.17.15",
    "@types/needle": "^3.3.0",
    "esbuild": "^0.24.2",
    "glob": "^11.0.0",
    "install": "^0.13.0",
    "npm": "^11.1.0",
    "pouchdb-server": "^4.2.0",
    "standard": "17.1.0",
    "tap": "^21.0.2",
    "tape": "5.8.1",
    "typescript": "5.6.2"
  },
  "volta": {
    "node": "20.17.0",
    "npm": "10.8.2"
  }
}